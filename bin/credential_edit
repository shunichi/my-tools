#!/bin/sh
env=$1
if [ -z "$env" ]; then
  cat <<EOF >&2
Usage: edit_credentials ENVIRONMENT

Example:
  $ edit_credentials production
  $ edit_credentials staging
EOF
  exit 1
fi

echo -n "Password for $env: "
read -s password
echo
RAILS_MASTER_KEY=$password bin/rails credentials:edit --environment=$env
